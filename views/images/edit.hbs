<h1>Edit Image Page</h1>


<form action="/image/edit/{{img._id}}" method="POST" enctype="multipart/form-data">

<p>{{img._id}}</p>
<label for="title">Title</label>
<input type="text" id='title' name='title' value='{{img.title}}'> 

<img src="{{img.path}}" alt="">
<input type="file" name="path" >

<label for="description">Description</label>
<textarea name="description" id="description" cols="30" rows="10" value="description">{{img.description}}</textarea>

<button type='submit'>Save</button>

</form>