      </div>

        <input type="file" name="photo" class='file-btn' name='path'>

      
      <div class="form-group">
        <label for="description">Example textarea</label>
        <textarea class="form-control" id="description" rows="3" name='description' value="description">{{img.description}}</textarea>
      </div>

      <button type="submit" class="btn btn-primary btn-lg btn-block" value='save'>Submit</button>

    </form>

  </div>

  </section>