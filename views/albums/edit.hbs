      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter a title" name='title' value='{{album.title}}'>
      </div>

        <input type="file" class='file-btn' name='path'>

      
      <div class="form-group">
        <label for="description">Example textarea</label>
        <textarea class="form-control" id="description" rows="3" name='description' value="description">{{album.description}}</textarea>
      </div>

      <button type="submit" class="btn btn-primary btn-lg btn-block" value='save'>Submit</button>

    </form>

  </div>

  </section>