<form action="/users/register" method='Post'>

<img src="" alt="" name='avatar'>


<label for="name">Name</label>
<input type='text' id='name' name="name" value='{{name}}' required>

<label for="password">Password</label>
<input type='password' id='email' name="password" value='{{password}}' required>

<label for="cpassword">Confirm Password</label>
<input type='password' id='cpassword' name="cpassword" value='{{cpassword}}'>


<label for="email">Email</label>
<input type="email" id='email' name="email" value='{{email}}' required>

<label for="bio">Bio</label>
<textarea name="bio" id="bio" cols="30" rows="10" value='{{bio}}'>Share your story</textarea>


<button>Submit</button>

</form>